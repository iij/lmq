{sub_dirs, ["rel"]}.
{erl_opts, [warnings_as_errors,
    {parse_transform, lager_transform},
    debug_info]}.
{cover_enabled, true}.
{eunit_opts, [verbose]}.

{deps, [
    {lager, "2.0.0",
     {git, "git://github.com/basho/lager", {tag, "2.0.0"}}},
    {uuid, ".*",
     {git, "git://github.com/okeuday/uuid.git", {branch, "master"}}},
    {msgpack_rpc, "0.6.3",
     {git, "git://github.com/msgpack-rpc/msgpack-rpc-erlang.git", {branch, "master"}}},
    {folsom, "0.7.4",
     {git, "git://github.com/boundary/folsom.git", {tag, "0.7.4"}}},
    {cowboy, ".*",
     {git, "git://github.com/extend/cowboy.git", {branch, "master"}}},
    {ibrowse, ".*",
     {git, "git://github.com/cmullaparthi/ibrowse.git", {branch, "master"}}},
    {jsonx, ".*",
     {git, "git://github.com/iskra/jsonx.git", {branch, "master"}}}
]}.
